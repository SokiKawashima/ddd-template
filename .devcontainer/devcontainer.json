// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node-postgres
{
  "name": "ddd",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "zsh .devcontainer/init.sh",
  "features": {
    "ghcr.io/devcontainers-extra/features/mise:1": {},
    "ghcr.io/devcontainers-extra/features/zsh-plugins:0": {},
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
      "plugins": "zsh-syntax-highlighting zsh-autosuggestions zsh-completions",
      "omzPlugins": "https://github.com/zsh-users/zsh-syntax-highlighting https://github.com/zsh-users/zsh-autosuggestions https://github.com/zsh-users/zsh-completions"
    }
    // "./feature": {}
  },

  // rootユーザでログイン
  "remoteUser": "root",

  // パスを通す
  "remoteEnv": {
    "PATH": "/root/.local/share/mise/shims:${containerEnv:PATH}"
  },
  "customizations": {
    "vscode": {
      "extensions": ["openai.chatgpt", "biomejs.biome"],
      "settings": {
        "terminal.integrated.cwd": "/workspace/applications",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "biomejs.biome",
        "[javascript]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "[javascriptreact]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "[typescript]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "editor.codeActionsOnSave": {
          "quickfix.biome": "explicit",
          "source.organizeImports.biome": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh",
            "args": ["-l"]
          }
        },
        "biome.lspBin": "/workspace/applications/node_modules/@biomejs/biome/bin/biome",
        // "biome.configurationPath": "/workspace/applications/biome.jsonc", // うまく動かないのでコメントアウトしてルートに配置した
        "mise.binPath": "/usr/local/bin/mise",
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/*/**": true
        }
      }
    }
  }
}
