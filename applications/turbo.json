{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "strict",
  "globalPassThroughEnv": ["ENV_NAME", "PGUSER", "PGPASSWORD", "PGHOST", "PGPORT", "PGDATABASE"],
  "tasks": {
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "check": {
      "dependsOn": ["lint", "format"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
