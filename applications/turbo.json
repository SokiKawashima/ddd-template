{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "strict",
  "globalPassThroughEnv": [
    "ENV_NAME",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_HOST",
    "POSTGRES_PORT",
    "POSTGRES_DB",
    "DATABASE_URL",
    "CLERK_SECRET_KEY",
    "CLERK_PUBLISHABLE_KEY"
  ],
  "tasks": {
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "check": {
      "dependsOn": ["lint", "format"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
